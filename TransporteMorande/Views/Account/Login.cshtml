@model TransporteMorande.Models.LoginViewModel

@{
    ViewBag.Title = "Log in";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<section id="wrapper" class="login-register">
    <div class="login-box login-sidebar">
        <div class="white-box">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal form-material", @id = "loginform" }))
            {
                @Html.AntiForgeryToken()
                <a href="javascript:void(0)" class="text-center db">
                    <img src="~/plugins/images/cs/Logo_CHS_Horizontal.png" class="img-responsive" alt="Inicio" /><br />
                </a>

                <div class="form-group m-t-40">
                    <div class="col-xs-12">
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @name = "form-username", @placeholder = "E-mail", @class = "form-control", @id = "form-username" } })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-xs-12">
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @name = "form-password", @placeholder = "Contraseña", @class = "form-control", @id = "form-password" } })
                    </div>
                </div>
                <div class="form-group">

                    <div class="col-md-12">
                        <div class="checkbox checkbox-info pull-left p-t-0">
                            @Html.CheckBoxFor(x => x.RememberMe, new { htmlAttributes = new { @type = "checkbox", @id = "checkbox-signup" } })
                            <label for="checkbox-signup"> Recordarme </label>
                        </div>
                        <a href="javascript:void(0)" id="to-recover" class="text-dark pull-right"><i class="fa fa-lock m-r-5"></i> Olvidé mi contraseña</a>
                    </div>
                </div>
                <div class="form-group text-center m-t-20">
                    <div class="col-xs-12">
                        <button class="btn btn-info btn-lg btn-block text-uppercase waves-effect waves-light" type="submit">Entrar</button>
                    </div>
                </div>
                @Html.ValidationSummary(true, "", new { @class = "text-danger", @style = "background-color:white;color:red;" })

            }
            <form class="form-horizontal" id="recoverform" action="index.html">
                <div class="form-group ">
                    <div class="col-xs-12">
                        <h3>Recuperar Contraseña</h3>
                        <p class="text-muted">Ingrese su correo para enviarle instrucciones de recuperación. </p>
                    </div>
                </div>
                <div class="form-group ">
                    <div class="col-xs-12">
                        <input class="form-control" type="text" required="" placeholder="Email">
                    </div>
                </div>
                <div class="form-group text-center m-t-20">
                    <div class="col-xs-12">
                        <button class="btn btn-primary btn-lg btn-block text-uppercase waves-effect waves-light" type="submit">Reestablecer</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>
